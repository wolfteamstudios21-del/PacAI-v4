{
  "version": 2,
  "builds": [
    { "src": "server/index-prod.ts", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index-prod.ts" },
    { "src": "/v4/(.*)", "dest": "/server/index-prod.ts" },
    { "src": "/(.*)", "dest": "/client/dist/index.html" }
  ],
  "functions": {
    "server/index-prod.ts": { "memory": 1024, "maxDuration": 60 }
  }
}
